{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [ "es2018", "dom" ],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["lib"]
}
